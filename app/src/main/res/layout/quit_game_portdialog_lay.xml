<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.wawa.wawaandroid_ep.dialog.viewmodel.GameQuitPortDialogVm" />
    </data>
    <FrameLayout
        android:layout_width="290dp" android:layout_height="337dp"
        android:background="@mipmap/quitgame_dialog_port_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_game_clearing_tips"
                    android:text=""
                    android:textSize="15dp"
                    android:textColor="@color/light_black"
                    android:gravity="center"/>
            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="12dp"
                android:text=""
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="23dp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:id="@+id/ll_twobt_bottom">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/continue_game"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/blue_20_cornors_bg"
                android:id="@+id/tv_keepgame"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:onClick="@{viewModel.onClick}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/tx_offline_tips"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/blue_20_cornors_bg"
                android:id="@+id/tv_quitgame"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:onClick="@{viewModel.onClick}"/>

        </LinearLayout>
        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/GAME_QUIT_ROOM"
            android:background="@drawable/blue_20_cornors_bg"
            android:id="@+id/bt_quitgame_room"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="23dp"
            android:layout_gravity="bottom|center_horizontal"
            android:visibility="gone"
            android:onClick="@{viewModel.onClick}"/>



    </FrameLayout>
</layout>