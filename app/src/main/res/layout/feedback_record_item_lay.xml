<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_feedback_title"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginRight="85dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/tv_feedback_title"
            android:layout_marginTop="6dp"
            android:textColor="#999999"
            android:textSize="12dp"
            android:id="@+id/tv_feedback_time"
            android:text=""/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_feedback_status"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_centerVertical="true"
        android:text=""/>
    <View
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/v_fb_msg"
        android:background="@drawable/msg_redbg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E1E1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>