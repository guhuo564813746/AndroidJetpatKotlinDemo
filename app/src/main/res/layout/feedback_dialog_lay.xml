<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.wawa.wawaandroid_ep.dialog.viewmodel.GameFeedBackVM" />
    </data>
<FrameLayout
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="440dp"
        android:orientation="vertical"
        android:background="@mipmap/im_setdialog_bg">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@mipmap/im_gamefix_tag"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="100dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lv_question_feedback"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingTop="15dp"
            android:background="@drawable/translucent_50_white_10_cormors_bg"/>

        <TextView
            android:layout_width="243dp"
            android:layout_height="40dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:id="@+id/tv_commit_question"
            android:background="@drawable/blue_10_cornors_bg"/>

    </LinearLayout>

</FrameLayout>
</layout>