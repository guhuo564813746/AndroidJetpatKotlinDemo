<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.wawa.wawaandroid_ep.dialog.viewmodel.GameFeedBackVM" />
    </data>
<FrameLayout
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:background="@mipmap/im_quest_feedback"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="45dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@mipmap/pc_btn_feedback"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GAME_FEEDBACK"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lv_question_feedback"
            android:layout_marginTop="34dp"
            android:paddingTop="25dp"/>

        <TextView
            android:layout_width="243dp"
            android:layout_height="40dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="22dp"
            android:id="@+id/tv_commit_question"
            android:background="@drawable/blue_20_cornors_bg"/>

    </LinearLayout>

</FrameLayout>
</layout>