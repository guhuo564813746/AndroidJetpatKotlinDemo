<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.wawa.wawaandroid_ep.activity.viewmodule.FishGameViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/stream_replaced"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/rl_userlist">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <ImageView
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:src="@mipmap/icon_three_points"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/user_list"
                        android:layout_marginStart="-10dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="66dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:background="@drawable/corner8_80alpha_bg"
                    android:layout_marginTop="26dp"
                    android:id="@+id/num"
                    android:text="@={viewModel.roomUserAmountText}"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:visibility="@{viewModel.countdownImgVisibility}"
                android:layout_below="@+id/rl_userlist"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/im_fish_countdown_bg">
<!--                android:background="@drawable/circle_black_70alpha_bg">-->
                <!--<com.wawa.wawaandroid_ep.view.CircularProgressView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:id="@+id/countdown_progress"
                    android:indeterminateTint="@color/progress_red"
                    app:backColor="@color/colornull"
                    app:backWidth="4dp"
                    app:progColor="@color/progress_red"
                    app:progWidth="4dp"
                    app:progress="100" />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="2dp"
                    android:autoSizeMaxTextSize="10dp"
                    android:textStyle="bold"
                    android:text="@{viewModel.countdownText}"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/rl_playerhead"
                android:background="@drawable/black_alpha70_cornors20_bg"
                android:visibility="@{viewModel.playerGameViewVisibility}">
                <FrameLayout
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/fl_Head"
                    android:layout_marginLeft="8dp">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/im_Head"
                        android:src="@drawable/white_circle_bg"
                        android:layout_gravity="center_horizontal|bottom"
                        android:scaleType="fitXY"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/im_headbg"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_gravity="center" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/fl_Head">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_playerName"
                        android:text="@{viewModel.playerName}"
                        android:textColor="@color/white"
                        android:textSize="14dp"/>
                    <TextView
                        android:layout_width="83dp"
                        android:layout_height="21dp"
                        android:id="@+id/tv_playerHonnor"
                        android:text="@{viewModel.playerHonnorName}"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:singleLine="true"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="2dp"
                        android:autoSizeMaxTextSize="10dp"
                        android:background="@mipmap/im_honortitle_bg"/>

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_playerhead"
                android:layout_alignLeft="@+id/rl_playerhead"
                android:layout_marginTop="5dp"
                android:background="@drawable/black_alpha50_cornors20_bg"
                android:visibility="@{viewModel.playerGameViewVisibility}"
                android:padding="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/im_getfish_tag"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fishtips"
                    android:text="@{viewModel.fishOnPrizeTips}"
                    android:layout_marginLeft="50dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/lv_game_notes"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/rl_guest"
            android:layout_alignParentBottom="true"
            android:visibility="@{viewModel.guestPanelVisibility}">
            <RelativeLayout
                android:id="@+id/btn_group"
                android:layout_width="154dp"
                android:layout_height="60dp"
                android:layout_marginTop="34dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/btn_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@{viewModel.startGameBtnRes}"
                    android:onClick="btnStartGame"/>
                <!--                app:imageResource="@{viewModel.startBtnRes}"-->

                <TextView
                    android:id="@+id/queue_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/white"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="10dp"
                    android:autoSizeMinTextSize="2dp"
                    android:textSize="10sp"
                    android:text="@={viewModel.queueCount}"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/coin_group"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:minWidth="254dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/half_alpha_black_14conors_bg"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">
                <TextView
                    android:id="@+id/fee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="end|center_vertical"
                    android:text="@={viewModel.fee}"
                    />
                <TextView
                    android:id="@+id/coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="@={viewModel.coin}"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:gravity="start|center_vertical"
                    android:text="0"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_gamecontrol"
            android:visibility="@{viewModel.gamePanelVisibility}">


            <com.wawa.wawaandroid_ep.view.ButtonControlPanel
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:id="@+id/fishing_controler"
                app:controlType="1"/>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_above="@+id/fishing_controler"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="-120dp"
                android:id="@+id/rl_camera_container">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_camera_controlor"
                    android:padding="10dp"
                    android:background="@drawable/half_alpha_black_14conors_bg"
                    android:layout_alignParentBottom="true">

                    <com.wawa.wawaandroid_ep.view.ButtonControlPanel
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/canmera_controler"
                        android:background="#12000000"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:controlType="2"/>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_above="@+id/canmera_controler"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/btn_camera_zoom_out"
                            android:layout_weight="1"
                            android:background="@mipmap/camera_zoom_out"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="5dp"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/camera_zoom_in"
                            android:layout_weight="1"
                            android:background="@mipmap/camera_zoom_in"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="0dp"/>
                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/camera_tag"
                    android:layout_toRightOf="@+id/rl_camera_controlor"
                    android:layout_alignBottom="@+id/rl_camera_controlor"
                    android:onClick="showCameraControler"
                    android:src="@mipmap/im_camera_controler_tag"/>

            </RelativeLayout>


            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="提杆"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/tv_game_tigan"
                android:onClick="finishHook"
                android:background="@drawable/fishgame_tigan_bg"/>
            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/tv_game_paogan"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@+id/tv_game_tigan"
                android:layout_marginRight="15dp"
                android:text="抛杆"
                android:onClick="casting"
                android:background="@drawable/fishgame_paogan_bg"/>
            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/tv_game_shouxian"
                android:layout_alignLeft="@+id/tv_game_paogan"
                android:layout_above="@+id/tv_game_paogan"
                android:layout_marginBottom="10dp"
                android:text="收线"
                android:background="@drawable/fishgame_shouxian_bg"/>
            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/tv_game_fangxian"
                android:text="放线"
                android:textColor="@color/white"
                android:layout_alignRight="@+id/tv_game_tigan"
                android:layout_above="@+id/tv_game_tigan"
                android:layout_marginBottom="10dp"
                android:background="@drawable/fishgame_fangxian_bg"/>
            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/tv_game_shanger"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="上饵"
                android:layout_above="@+id/tv_game_fangxian"
                android:layout_alignRight="@+id/tv_game_tigan"
                android:layout_marginBottom="10dp"
                android:onClick="addBait"
                android:background="@drawable/fishgame_addfishfood_bg"/>
            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="摘鱼"
                android:id="@+id/tv_game_getfish"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:layout_alignRight="@+id/tv_game_tigan"
                android:layout_above="@+id/tv_game_shanger"
                android:layout_marginBottom="10dp"
                android:onClick="unload"
                android:background="@drawable/fishgame_getfish_bg"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/translucent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:onClick="back"
                android:background="@mipmap/im_gamefish_back"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="9dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:textSize="18dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="visible"
                android:id="@+id/tv_game_title"
                android:gravity="center"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="18dp"
                android:autoSizeMinTextSize="2dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="7.5dp"
                android:layout_marginBottom="9dp"
                android:paddingRight="7.5dp"
                android:id="@+id/ll_game_menu">
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/spinner_gameset"
                    android:background="@mipmap/im_game_menu"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    </RelativeLayout>
</layout>