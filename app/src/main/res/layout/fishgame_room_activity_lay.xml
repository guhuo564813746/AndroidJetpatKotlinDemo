<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.wawa.wawaandroid_ep.activity.viewmodule.FishGameViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/stream_replaced"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/rl_userlist">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">
                    <ImageView
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:src="@mipmap/icon_three_points"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/user_list"
                        android:layout_marginStart="-10dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="66dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="11dp"
                    android:background="@drawable/corner8_80alpha_bg"
                    android:layout_marginTop="26dp"
                    android:id="@+id/num"
                    android:text="@={viewModel.roomUserAmountText}"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:visibility="@{viewModel.countdownImgVisibility}"
                android:layout_below="@+id/rl_userlist"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/circle_black_70alpha_bg">
                <com.wawa.wawaandroid_ep.view.CircularProgressView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:id="@+id/countdown_progress"
                    android:indeterminateTint="@color/progress_red"
                    app:backColor="@color/colornull"
                    app:backWidth="4dp"
                    app:progColor="@color/progress_red"
                    app:progWidth="4dp"
                    app:progress="100" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:text="@{viewModel.countdownText}"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/rl_playerhead">

            </RelativeLayout>
            
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:id="@+id/lv_game_notes"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_gamecontrol"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提杆"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:padding="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/tv_game_tigan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_paogan"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@+id/tv_game_tigan"
                android:layout_marginRight="15dp"
                android:padding="4dp"
                android:text="抛杆"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_shouxian"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/tv_game_tigan"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:text="收线"
                android:padding="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_fangxian"
                android:padding="4dp"
                android:text="放线"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/tv_game_shouxian"
                android:layout_above="@+id/tv_game_paogan"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_game_shanger"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="上饵"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/tv_game_shouxian"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="摘鱼"
                android:id="@+id/tv_game_getfish"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/tv_game_shanger"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="2dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/translucent">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:onClick="back"
                android:background="@mipmap/icon_arrow_right"
                android:rotation="180"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="9dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:textSize="18dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="visible"
                android:id="@+id/tv_game_title"
                android:gravity="center"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:maxLines="1"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="18dp"
                android:autoSizeMinTextSize="2dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="7.5dp"
                android:layout_marginBottom="9dp"
                android:paddingRight="7.5dp"
                android:id="@+id/ll_game_menu">
                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/spinner_gameset"
                    android:background="@drawable/game_bg_menu"/>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>