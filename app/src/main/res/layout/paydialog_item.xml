<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ll_paydialogitem">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/rl_paydialog_item"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

                <View
                    android:layout_width="80dp"
                    android:layout_height="17dp"
                    android:id="@+id/view_active_bottom"
                    android:background="@drawable/pay_active_bottom_bg"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100币"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:id="@+id/tv_big_pay"
                    android:gravity="center"
                    android:maxLines="1"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="2dp"
                    android:autoSizeMaxTextSize="13dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="送50"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="34dp"
                    android:id="@+id/tv_big_paytips"
                    android:maxLines="2"
                    android:gravity="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="2dp"
                    android:autoSizeMaxTextSize="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="17dp"
                    android:gravity="center"
                    android:text="￥10"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv_paycount"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:text="日卡"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:id="@+id/tv_pay_card"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="10dp"
                    android:layout_marginTop="23dp"
                    android:id="@+id/tv_smallpay"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="35dp"
                    android:id="@+id/tv_smallpay_tips"
                    android:maxLines="2"
                    android:gravity="center"/>
            </RelativeLayout>
            <ImageView
                android:layout_width="90dp"
                android:layout_height="21dp"
                android:src="@mipmap/im_pay_activity"
                android:visibility="gone"
                android:id="@+id/im_isactive"
                android:layout_alignRight="@+id/rl_paydialog_item"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>

    </FrameLayout>

</layout>