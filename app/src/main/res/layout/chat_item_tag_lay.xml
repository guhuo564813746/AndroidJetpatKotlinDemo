<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/corner8_80alpha_bg"
    android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginLeft="37dp"
            android:layout_centerVertical="true"
            android:id="@+id/rl_gamer_container">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gamer_name"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:paddingRight="37dp"
                android:paddingLeft="30dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:id="@+id/im_gamer_honor_bg"
                android:adjustViewBounds="true"/>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:id="@+id/fl_Head"
            android:layout_marginLeft="8dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/im_Head"
                android:src="@drawable/white_circle_bg"
                android:layout_gravity="center_horizontal|bottom"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:id="@+id/im_headbg"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_gravity="center" />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:id="@+id/tv_msg_content1"
            android:textColor="@color/msg_tag_color"
            android:maxLines="1"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_msg_content2"
        android:textColor="@color/msg_tag_color"
        android:textSize="12dp"
        />

</LinearLayout>